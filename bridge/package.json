{
  "name": "claude-automation-bridge",
  "version": "4.0.0",
  "description": "Telegram bot bridge for Claude agents with multi-manager support",
  "main": "dist/telegram-server.js",
  "scripts": {
    "build": "tsc",
    "start": "./scripts/start.sh",
    "start:telegram": "node dist/telegram-server.js",
    "setup": "node dist/setup.js",
    "dev": "tsc --watch",
    "send": "node dist/telegram-send-cli.js",
    "managers": "node dist/managers-cli.js",
    "status": "node dist/managers-cli.js status",
    "orchestrators": "node dist/managers-cli.js orchestrators",
    "sessions": "node dist/managers-cli.js sessions",
    "health": "node dist/health-cli.js",
    "health:check": "node dist/health-cli.js check",
    "health:paths": "node dist/health-cli.js paths",
    "health:managers": "node dist/health-cli.js managers",
    "health:clean": "node dist/health-cli.js clean",
    "tasks": "node dist/human-tasks-cli.js",
    "tasks:list": "node dist/human-tasks-cli.js list",
    "tasks:add": "node dist/human-tasks-cli.js add",
    "clean": "rm -rf dist"
  },
  "keywords": ["claude", "telegram", "bot", "ai", "agent", "multi-manager", "automation"],
  "author": "Alexander",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

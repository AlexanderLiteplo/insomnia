{
  "name": "claude-imessage-bridge",
  "version": "3.0.0",
  "description": "iMessage bridge for Claude agents with multi-manager support",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "./scripts/start.sh",
    "dev": "tsc --watch",
    "send": "node dist/send-cli.js",
    "managers": "node dist/managers-cli.js",
    "status": "node dist/managers-cli.js status",
    "orchestrators": "node dist/managers-cli.js orchestrators",
    "sessions": "node dist/managers-cli.js sessions",
    "tasks": "node dist/human-tasks-cli.js",
    "tasks:list": "node dist/human-tasks-cli.js list",
    "tasks:add": "node dist/human-tasks-cli.js add",
    "clean": "rm -rf dist"
  },
  "keywords": ["claude", "imessage", "ai", "agent", "multi-manager"],
  "author": "Alexander",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
